@model Inventario360.Models.Cuenta

<h2>Iniciar sesión</h2>

<form method="post" asp-action="Login">
    <div class="form-group">
        <label for="Email">Correo electrónico</label>
        <input type="email" id="Email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Password">Contraseña</label>
        <input type="password" id="Password" asp-for="Password" class="form-control" required />
    </div>
    <div class="form-group form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" for="RememberMe">Recordarme</label>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-2">
        @ViewBag.Error
    </div>
}
