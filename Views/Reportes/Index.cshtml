@model IEnumerable<Inventario360.Models.Reporte>

@{
    ViewData["Title"] = "Reportes";
}

<h2>Reportes</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reporte in Model)
        {
            <tr>
                <td>@reporte.Id</td>
                <td>@reporte.Nombre</td>
                <td>@reporte.Fecha.ToShortDateString()</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@reporte.Id" class="btn btn-info">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
