@model Inventario360.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<div class="container mt-4">
    <h2 class="mb-4">Eliminar Proveedor</h2>
    <p>¿Estás seguro que deseas eliminar este proveedor?</p>

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Contacto</dt>
        <dd class="col-sm-10">@Model.Contacto</dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-orange">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
