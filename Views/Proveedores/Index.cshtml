@model List<Inventario360.Models.Proveedor>

@{
    ViewData["Title"] = "Listado de Proveedores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Listado de Proveedores</h2>
        <a class="btn btn-secondary" href="@Url.Action("Crear")">Crear Nuevo Proveedor</a>
    </div>

    <table id="tablaProyectos" class="table table-striped table-bordered table-hover nowrap" width="100%">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Contacto</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proveedor in Model)
            {
                <tr>
                    <td>@proveedor.Nombre</td>
                    <td>@proveedor.Contacto</td>
                    <td>
                        <a class="btn btn-sm btn-orange me-1" href="@Url.Action("Editar", new { id = proveedor.ID })">Editar</a>
                        <a class="btn btn-sm btn-secondary" href="@Url.Action("Eliminar", new { id = proveedor.ID })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaProyectos').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ proyectos",
                    paginate: {
                        next: "Siguiente",
                        previous: "Anterior"
                    }
                }
            });
        });
    </script>
}

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .pagination-separated .paginate_button {
        margin: 0 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #fcd8b7;
    }

    .fila-hover:hover {
        background-color: #fbdfc5;
    }

    .mb-4 {
        margin-bottom: 3rem !important;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: bold;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    .dataTables_wrapper .dataTables_filter {
        margin-bottom: 15px;
    }

    .table-bordered {
        border: 1px solid #333 !important;
    }

        .table-bordered th, .table-bordered td {
            border: 0.5px solid #ccc !important;
        }

    table.dataTable.dtr-inline.collapsed > tbody > tr > td.dtr-control::before {
        background-color: #f06529 !important;
        color: white !important;
        border-radius: 50% !important;
        width: 18px !important;
        height: 18px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        font-weight: bold !important;
    }

    table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td.dtr-control::before {
        background-color: #d9531e !important;
        color: black !important;
    }
</style>
