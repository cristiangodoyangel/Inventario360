@model Inventario360.Models.ViewModels.PerfilViewModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container">
    <h2 class="mb-4">Mi Perfil</h2>

    <form asp-action="ActualizarPerfil" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Nombre Completo</label>
            <input asp-for="NombreCompleto" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Correo Electrónico</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </form>

    <hr />

    <a asp-action="CambiarContrasena" class="btn btn-warning">Cambiar Contraseña</a>
</div>
