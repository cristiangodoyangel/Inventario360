@model Inventario360.Models.ViewModels.PerfilViewModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container">
    <h2 class="mb-4">Mi Perfil</h2>

    <form asp-action="ActualizarPerfil" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Nombre Completo</label>
            <input asp-for="NombreCompleto" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Correo Electrónico</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <button type="submit" class="btn btn-orange">Guardar Cambios</button>
    </form>

    <hr />

    <a asp-action="CambiarContrasena" class="btn btn-secondary">Cambiar Contraseña</a>
</div>

<style>
    .btn-orange {
        background-color: #f06529 !important;
        border-radius: 5px;
        border-color: #f06529 !important;
        color: white !important;
    }

        .btn-orange:hover {
            background-color: #d9531e !important;
            border-color: #d9531e !important;
        }

    .btn-icon {
        background-color: transparent !important;
        border: 1px solid #000000 !important;
        color: #f06529 !important;
        border-radius: 5px;
        font-size: 1.2rem;
        padding: 0.3rem;
    }

        .btn-icon:hover {
            color: #d9531e !important;
        }
</style>
