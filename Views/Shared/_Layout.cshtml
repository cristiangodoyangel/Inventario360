<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventario360</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventario360.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: white;
        }

            .header img {
                height: 60px;
            }

        .login-btn {
            background-color: #f1663b;
            color: white !important;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.3s ease;
        }

            .login-btn:hover {
                background-color: #f1663b;
            }

        .navbar {
            background-color: #f1663b;
            padding: 15px;
        }

        .navbar-nav .nav-link {
            font-size: 18px;
            font-weight: bold;
            color: white !important;
            margin: 0 15px;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="/images/logo.png" alt="Logo">
        <a href="/Account/Login" class="login-btn">Ingresar</a>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" href="/Producto/Index">Inventario</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Salida/Index">Entrega de Materiales</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Solicitud/Index">Solicitud de Materiales</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Reportes/Index">Reportes</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-white text-center p-3 mt-4">
        &copy; 2025 - Inventario360 - Todos los derechos reservados.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
