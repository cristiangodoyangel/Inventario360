@model List<Inventario360.Models.Proyecto>

@{
    ViewData["Title"] = "Listado de Proyectos";
}

<div class="container mt-4">
    <h2 class="text-center mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-folder-tree-icon lucide-folder-tree"><path d="M20 10a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1h-2.5a1 1 0 0 1-.8-.4l-.9-1.2A1 1 0 0 0 15 3h-2a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1Z" /><path d="M20 21a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1h-2.9a1 1 0 0 1-.88-.55l-.42-.85a1 1 0 0 0-.92-.6H13a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1Z" /><path d="M3 5a2 2 0 0 0 2 2h3" /><path d="M3 3v13a2 2 0 0 0 2 2h3" /></svg>  Listado de Proyectos</h2>
          <a class="btn btn-secondary" href="@Url.Action("Crear")">Crear Nuevo Proyecto</a>

        </div>
    </h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }


    <table id="tablaProyectos" class="table table-striped table-bordered table-hover nowrap" width="100%">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proyecto in Model)
            {
                    <tr>
                        <td>@proyecto.Nombre</td>
                        <td>@proyecto.Descripcion</td>
                        <td>
                            <a class="btn btn-sm btn-orange me-1" href="@Url.Action("Editar", new { id = proyecto.ID })">Editar</a>
                            <a class="btn btn-sm btn-secondary" href="@Url.Action("Eliminar", new { id = proyecto.ID })">Eliminar</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
        <script>
       
        $(document).ready(function () {
            $('#tablaProyectos').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ proyectos",
                    paginate: {
                        next: "Siguiente",
                        previous: "Anterior"
                    }
                }
            });
        });
  

        </script>
}


<style>


    .table-responsive {
        overflow-x: auto;
    }

    .pagination-separated .paginate_button {
        margin: 0 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #fcd8b7;
    }

    .fila-hover:hover {
        background-color: #fbdfc5;
    }

    .mb-4 {
        margin-bottom: 3rem !important;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: bold;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    /* ✅ Agrega espacio entre el cuadro de búsqueda y la tabla */
    .dataTables_wrapper .dataTables_filter {
        margin-bottom: 15px;
    }

    /* ✅ Agregar borde superior e inferior a la tabla */
    .table-bordered {
        border: 1px solid #333 !important;
    }

        .table-bordered th,
        .table-bordered td {
            border: 0.5px solid #ccc !important;
        }

    /* ✅ Cambia el color del "+" cuando la tabla es responsiva */
    table.dataTable.dtr-inline.collapsed > tbody > tr > td.dtr-control::before {
        background-color: #f06529 !important; /* Naranja */
        color: white !important; /* Color del "+" */
        border-radius: 50% !important;
        width: 18px !important;
        height: 18px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        font-weight: bold !important;
    }

    /* ✅ Cambia el color del "-" cuando como puela fila está expandida */
    table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td.dtr-control::before {
        background-color: #d9531e !important; /* Gris */
        color: black !important; /* Color del "-" */
    }
</style>