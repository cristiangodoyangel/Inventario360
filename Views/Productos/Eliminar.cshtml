@model Inventario360.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>Eliminar Producto</h2>

<p>¿Estás seguro de que deseas eliminar el producto <strong>@Model.NombreTecnico</strong>?</p>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="ITEM" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
