@model Inventario360.Models.Producto

@{
    ViewData["Title"] = "Agregar Nuevo Producto";
}

<div class="container mt-4">
    <h2 class="mb-3 text-orange">Agregar Nuevo Producto</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="Crear" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Nombre Técnico</label>
                <input asp-for="NombreTecnico" class="form-control" required />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Medida</label>
                    <input asp-for="Medida" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Unidad de Medida</label>
                    <input asp-for="UnidadMedida" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Marca</label>
                    <input asp-for="Marca" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" type="number" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Ubicación</label>
                    <input asp-for="Ubicacion" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Estado</label>
                    <select asp-for="Estado" class="form-control">
                        <option value="Nuevo">Nuevo</option>
                        <option value="Usado">Usado</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Proveedor</label>
                <select asp-for="Proveedor" class="form-control" asp-items="ViewBag.Proveedores">
                    <option value="">Seleccione un proveedor</option>
                </select>
            </div>

            <!-- Campo de Categoría -->
            <div class="mb-3">
                <label class="form-label">Categoría</label>
                <input asp-for="Categoria" class="form-control" placeholder="Ingrese la categoría" />
            </div>

            <!-- Subida de imagen -->
            <div class="mb-3">
                <label class="form-label">Subir Imagen</label>
                <input type="file" name="ImagenArchivo" class="form-control" />
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-orange">💾 Guardar Producto</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<style>
   

    .table-responsive {
        overflow-x: auto;
    }

    .pagination-separated .paginate_button {
        margin: 0 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #fcd8b7;
    }

    .fila-hover:hover {
        background-color: #fbdfc5;
    }

    .mb-4 {
        margin-bottom: 3rem !important;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: bold;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    /* ✅ Agrega espacio entre el cuadro de búsqueda y la tabla */
    .dataTables_wrapper .dataTables_filter {
        margin-bottom: 15px;
    }

    /* ✅ Agregar borde superior e inferior a la tabla */
    .table-bordered {
        border: 1px solid #333 !important;
    }

        .table-bordered th,
        .table-bordered td {
            border: 0.5px solid #ccc !important;
        }

    /* ✅ Cambia el color del "+" cuando la tabla es responsiva */
    table.dataTable.dtr-inline.collapsed > tbody > tr > td.dtr-control::before {
        background-color: #f06529 !important; /* Naranja */
        color: white !important; /* Color del "+" */
        border-radius: 50% !important;
        width: 18px !important;
        height: 18px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        font-weight: bold !important;
    }

    /* ✅ Cambia el color del "-" cuando la fila está expandida */
    table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td.dtr-control::before {
        background-color: #d9531e !important; /* Gris */
        color: black !important; /* Color del "-" */
    }
</style>
