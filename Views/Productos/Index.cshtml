@model IEnumerable<Inventario360.Models.Producto>

@{
    ViewData["Title"] = "Inventario de Productos";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6 d-flex align-items-center">
            <label for="buscar" class="me-2">Buscar:</label>
            <input type="text" id="buscar" class="form-control w-50" placeholder="Buscar producto...">
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-secondary">➕ Agregar Producto</a>
        </div>
    </div>

    <table id="productosTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ITEM</th>
                <th>Nombre Técnico</th>
                <th>Medida</th>
                <th>Unidad de Medida</th>
                <th>Marca</th>
                <th>Cantidad</th>
                <th>Ubicación</th>
                <th>Estado</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.ITEM</td>
                    <td>@producto.NombreTecnico</td>
                    <td>@producto.Medida</td>
                    <td>@producto.UnidadMedida</td>
                    <td>@producto.Marca</td>
                    <td class="@(producto.Cantidad == 0 ? "text-danger font-weight-bold" : "")">
                        @producto.Cantidad
                    </td>
                    <td>@producto.Ubicacion</td>
                    <td>@producto.Estado</td>
                    <td>
                        <img src="~/images/@producto.Imagen" alt="Imagen Producto" width="50" height="50">
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@producto.ITEM" class="btn btn-warning btn-sm">✏️</a>
                        <a asp-action="Delete" asp-route-id="@producto.ITEM" class="btn btn-danger btn-sm">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row mt-4">
        <div class="col-md-6">
            <span class="text-muted">
                Mostrando <span id="currentPage"></span> de <span id="totalPages"></span> páginas
            </span>
            <span class="ms-3">
                <a href="#" class="text-decoration-none me-2">Anterior</a>
                <a href="#" class="text-decoration-none">Siguiente</a>
            </span>
        </div>
        <div class="col-md-6 text-end">
            <div class="d-flex justify-content-end align-items-center">
                <label for="registros" class="me-2">Mostrar:</label>
                <select id="registros" class="form-select w-auto">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
                <span class="ms-2">registros por página</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#productosTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "No se encontraron productos",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

            $('#registros').on('change', function () {
                table.page.len($(this).val()).draw();
            });

            $('#currentPage').text(table.page.info().page + 1);
            $('#totalPages').text(table.page.info().pages);
        });
    </script>
}
