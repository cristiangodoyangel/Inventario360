@{
    ViewData["Title"] = "Subir Excel de Inventario";
}

<div class="container mt-4">
    <h2 class="text-center mb-4"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sheet-icon lucide-sheet"><rect width="18" height="18" x="3" y="3" rx="2" ry="2" /><line x1="3" x2="21" y1="9" y2="9" /><line x1="3" x2="21" y1="15" y2="15" /><line x1="9" x2="9" y1="9" y2="21" /><line x1="15" x2="15" y1="9" y2="21" /></svg> Subir Excel para Actualizar Inventario</h2>
    <hr class="mb-4" />

    <form asp-action="ProcesarExcel" method="post" enctype="multipart/form-data" class="border rounded p-4 bg-light shadow-sm">
        <div class="mb-3">
            <label for="archivoExcel" class="form-label">Selecciona el archivo Excel (.xlsx)</label>
            <input type="file" class="form-control" id="archivoExcel" name="archivoExcel" accept=".xlsx" required>
        </div>

        <div class="text-end">
            <a asp-action="Index" class="btn btn-secondary">← Volver al Inventario</a>
            <button type="submit" class="btn btn-orange">Cargar y Procesar</button>
        </div>
    </form>
</div>
