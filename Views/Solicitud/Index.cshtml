@{
    ViewData["Title"] = "Solicitudes de Material";
}

<h2>Lista de Solicitudes</h2>

<a href="@Url.Action("Crear", "Solicitudes")" class="btn btn-success">Nueva Solicitud</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Solicitante</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var solicitud in Model)
        {
            <tr>
                <td>@solicitud.ID</td>
                <td>@solicitud.Solicitante</td>
                <td>@solicitud.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@solicitud.Estado</td>
                <td>
                    <a href="@Url.Action("Detalle", "Solicitudes", new { id = solicitud.ID })" class="btn btn-primary btn-sm">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>