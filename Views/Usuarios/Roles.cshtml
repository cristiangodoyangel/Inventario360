@model Inventario360.ViewModels.RolesViewModel

@{
    ViewData["Title"] = "Asignar Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Asignar Roles a @Model.NombreUsuario</h2>

<form asp-action="Roles" method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="form-group">
        @foreach (var rol in Model.TodosLosRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="RolesSeleccionados" value="@rol"
                @(Model.RolesAsignados.Contains(rol) ? "checked" : "") />
                <label class="form-check-label">@rol</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Roles</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
