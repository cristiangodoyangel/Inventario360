@model Inventario360.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-4">
    <h2 class="mb-4">Eliminar Empleado</h2>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="ID" />
        <p>¿Estás seguro que deseas eliminar este empleado?</p>
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Cargo</dt>
            <dd class="col-sm-10">@Model.Cargo</dd>
        </dl>
        <button type="submit" class="btn btn-orange">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
