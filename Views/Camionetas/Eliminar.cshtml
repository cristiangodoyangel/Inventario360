@model Inventario360.Models.Camioneta
@{
    ViewData["Title"] = "Eliminar Camioneta";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">¿Eliminar esta Camioneta?</h2>
    <dl class="row">
        <dt class="col-sm-3">Patente</dt>
        <dd class="col-sm-9">@Model.Patente</dd>

        <dt class="col-sm-3">Marca</dt>
        <dd class="col-sm-9">@Model.Marca</dd>

        <dt class="col-sm-3">Modelo</dt>
        <dd class="col-sm-9">@Model.Modelo</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
